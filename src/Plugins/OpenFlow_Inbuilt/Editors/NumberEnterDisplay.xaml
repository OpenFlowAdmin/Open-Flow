<Styles
  xmlns = "https://github.com/avaloniaui"
  xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:OFPF = "clr-namespace:OpenFlow_PluginFramework.Primitives;assembly=OpenFlow_PluginFramework"
  xmlns:local = "clr-namespace:OpenFlow_Inbuilt">

  <Styles.Resources>
    <DataTemplate DataType="OFPF:OpenFlowValue" x:Key="NumberEnterDisplay">
      <StackPanel Orientation="Horizontal" Spacing="4">
        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
        <NumericUpDown Value="{Binding Value}" VerticalAlignment="Center"/>
      </StackPanel>
    </DataTemplate>
  </Styles.Resources>
</Styles>